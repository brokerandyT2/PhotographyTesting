<?xml version="1.0" encoding="utf-8" ?>
<basePages:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:basePages="clr-namespace:Location.Photography.Base"
             xmlns:strings="clr-namespace:Location.Photography.Resources"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             x:Class="Location.Photography.Pro.SunCalculations"
             Title="Sun Calculations">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <ScrollView Grid.Row="0">
            <Grid Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Location Image -->
                <Image Grid.Row="0" Source="{Binding LocationPhoto}" 
                       HeightRequest="200" Aspect="AspectFill" 
                       Margin="0,0,0,20" 
                       x:Name="locationPhoto" />

                <!-- Location Picker -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Text="{x:Static strings:AppResources.chooseyourlocation}" Margin="0,0,0,5" />
                    <Picker Grid.Row="1" ItemsSource="{Binding LocationsS}" 
                            SelectedItem="{Binding SelectedLocation}"
                            ItemDisplayBinding="{Binding Title}"
                            x:Name="locationPicker" 
                            SelectedIndexChanged="LocationPicker_SelectedIndexChanged" />
                </Grid>

                <!-- Date Picker -->
                <Grid Grid.Row="2" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Text="{x:Static strings:AppResources.choosedate}" Margin="0,0,0,5" />
                    <DatePicker Grid.Row="1" Date="{Binding Date}"
                                Format="{Binding DateFormat}"
                                x:Name="datePicker" 
                                DateSelected="DatePicker_DateSelected" />
                </Grid>

                <!-- Sun Times Results -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Astronomical Dawn -->
                    <Image Grid.Row="0" Grid.Column="0" Source="weathersunsetupcustom.png" HeightRequest="24" Margin="0,0,10,0"/>
                    <Label Grid.Row="0" Grid.Column="1" Text="{x:Static strings:AppResources.AstronomicalDawn}" VerticalOptions="Center"/>
                    <Label Grid.Row="0" Grid.Column="2" Text="{Binding AstronomicalDawnFormatted}" VerticalOptions="Center"/>

                    <!-- Nautical Dawn -->
                    <Image Grid.Row="1" Grid.Column="0" Source="weathersunsetupcustom.png" HeightRequest="24" Margin="0,10,10,0"/>
                    <Label Grid.Row="1" Grid.Column="1" Text="Nautical Dawn" VerticalOptions="Center" Margin="0,10,0,0"/>
                    <Label Grid.Row="1" Grid.Column="2" Text="{Binding NauticalDawnFormatted}" VerticalOptions="Center" Margin="0,10,0,0"/>

                    <!-- Civil Dawn -->
                    <Image Grid.Row="2" Grid.Column="0" Source="weathersunsetupcustom.png" HeightRequest="24" Margin="0,10,10,0"/>
                    <Label Grid.Row="2" Grid.Column="1" Text="Civil Dawn" VerticalOptions="Center" Margin="0,10,0,0"/>
                    <Label Grid.Row="2" Grid.Column="2" Text="{Binding CivilDawnFormatted}" VerticalOptions="Center" Margin="0,10,0,0"/>

                    <!-- Sunrise -->
                    <Image Grid.Row="3" Grid.Column="0" Source="weathersunsetupcustom.png" HeightRequest="24" Margin="0,10,10,0"/>
                    <Label Grid.Row="3" Grid.Column="1" Text="{x:Static strings:AppResources.Sunrise}" VerticalOptions="Center" Margin="0,10,0,0"/>
                    <Label Grid.Row="3" Grid.Column="2" x:Name="sunriseDisplay" Text="{Binding SunRiseFormatted}" VerticalOptions="Center" Margin="0,10,0,0"/>

                    <!-- Golden Hour Morning End -->
                    <Image Grid.Row="4" Grid.Column="0" Source="sunclockoutlinecustom.png" HeightRequest="24" Margin="0,10,10,0"/>
                    <Label Grid.Row="4" Grid.Column="1" Text="{x:Static strings:AppResources.goldenhourmorning}" VerticalOptions="Center" Margin="0,10,0,0"/>
                    <Label Grid.Row="4" Grid.Column="2" x:Name="goldenhourmorningdisplay" Text="{Binding GoldenHourMorningFormatted}" VerticalOptions="Center" Margin="0,10,0,0"/>

                    <!-- Solar Noon -->
                    <Image Grid.Row="5" Grid.Column="0" Source="sunclockoutlinecustom.png" HeightRequest="24" Margin="0,10,10,0"/>
                    <Label Grid.Row="5" Grid.Column="1" Text="{x:Static strings:AppResources.solarnoon}" VerticalOptions="Center" Margin="0,10,0,0"/>
                    <Label Grid.Row="5" Grid.Column="2" x:Name="solarnoondisplay" Text="{Binding SolarNoonFormatted}" VerticalOptions="Center" Margin="0,10,0,0"/>

                    <!-- Golden Hour Evening Start -->
                    <Image Grid.Row="6" Grid.Column="0" Source="weathersunsetdowncustom.png" HeightRequest="24" Margin="0,10,10,0"/>
                    <Label Grid.Row="6" Grid.Column="1" Text="{x:Static strings:AppResources.goldenhourevening}" VerticalOptions="Center" Margin="0,10,0,0"/>
                    <Label Grid.Row="6" Grid.Column="2" x:Name="goldenhoureveningdisplay" Text="{Binding GoldenHourEveningFormatted}" VerticalOptions="Center" Margin="0,10,0,0"/>

                    <!-- Sunset -->
                    <Image Grid.Row="7" Grid.Column="0" Source="weathersunsetdowncustom.png" HeightRequest="24" Margin="0,10,10,0"/>
                    <Label Grid.Row="7" Grid.Column="1" Text="{x:Static strings:AppResources.Sunset}" VerticalOptions="Center" Margin="0,10,0,0"/>
                    <Label Grid.Row="7" Grid.Column="2" x:Name="sunsetdisplay" Text="{Binding SunSetFormatted}" VerticalOptions="Center" Margin="0,10,0,0"/>

                    <!-- Civil Dusk -->
                    <Image Grid.Row="8" Grid.Column="0" Source="weathersunsetdowncustom.png" HeightRequest="24" Margin="0,10,10,0"/>
                    <Label Grid.Row="8" Grid.Column="1" Text="Civil Dusk" VerticalOptions="Center" Margin="0,10,0,0"/>
                    <Label Grid.Row="8" Grid.Column="2" Text="{Binding CivilDuskFormatted}" VerticalOptions="Center" Margin="0,10,0,0"/>

                    <!-- Nautical Dusk -->
                    <Image Grid.Row="9" Grid.Column="0" Source="weathersunsetdowncustom.png" HeightRequest="24" Margin="0,10,10,0"/>
                    <Label Grid.Row="9" Grid.Column="1" Text="Nautical Dusk" VerticalOptions="Center" Margin="0,10,0,0"/>
                    <Label Grid.Row="9" Grid.Column="2" Text="{Binding NauticalDuskFormatted}" VerticalOptions="Center" Margin="0,10,0,0"/>

                    <!-- Astronomical Dusk -->
                    <Image Grid.Row="10" Grid.Column="0" Source="weathersunsetdowncustom.png" HeightRequest="24" Margin="0,10,10,0"/>
                    <Label Grid.Row="10" Grid.Column="1" Text="{x:Static strings:AppResources.AstronomicalDusk}" VerticalOptions="Center" Margin="0,10,0,0"/>
                    <Label Grid.Row="10" Grid.Column="2" Text="{Binding AstronomicalDuskFormatted}" VerticalOptions="Center" Margin="0,10,0,0"/>
                </Grid>
            </Grid>
        </ScrollView>

        <!-- Busy indicator overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="2" IsVisible="{Binding VmIsBusy}" BackgroundColor="#80000000">
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <ActivityIndicator IsRunning="{Binding VmIsBusy}" HeightRequest="50" WidthRequest="50" Color="White" />
                <Label Text="Calculating, please wait..." TextColor="White" Margin="0,10,0,0"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Error message display -->
        <Border Grid.Row="1" 
                IsVisible="{Binding VmErrorMessage, Converter={StaticResource StringToBoolConverter}}"
                BackgroundColor="#FFEBEE"
                Margin="10">
            <Label Text="{Binding VmErrorMessage}"
                   TextColor="Red"
                   FontSize="14"
                   Margin="10" />
        </Border>
    </Grid>
</basePages:ContentPageBase>