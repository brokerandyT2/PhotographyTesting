<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Location.Photography.Pro.SceneEvaluation"
             Title="Scene Evaluation"
             xmlns:system="clr-namespace:System;assembly=netstandard"
>


    <ScrollView VerticalOptions="FillAndExpand">
        <Grid Margin="2,2,2,2" Padding="2,2,2,2">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />

                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Text="{x:Static system:Environment.NewLine}" Grid.Row="0" Grid.ColumnSpan="6"/>
            <Label Text="" Grid.Row="1" Grid.ColumnSpan="6"/>
            
            <Image x:Name="histogramRed" Source="{Binding RedHistogramImage}" IsVisible="False" Grid.Row="2" Grid.ColumnSpan="6" />
            <Image x:Name="histogramBlue" Source="{Binding BlueHistogramImage}" IsVisible="False" Grid.Row="3" Grid.ColumnSpan="6"/>
            <Image x:Name="histogramGreen" Source="{Binding GreenHistogramImage}" IsVisible="False" Grid.Row="4"  Grid.ColumnSpan="6"/>
            <Image x:Name="histogramContrast" Source="{Binding ContrastHistogramImage}" Grid.Row="5" Grid.ColumnSpan="6"/>
            
            <RadioButton Content="" GroupName="chart" Value="R" Grid.Row="6" Grid.Column="0" CheckedChanged="CheckedChanged" IsVisible="True"/>
            <RadioButton Content="" GroupName="chart" Value="B" Grid.Row="6" Grid.Column="1" CheckedChanged="CheckedChanged" IsVisible="True"/>
            <RadioButton Content="" GroupName="chart" Value="G" Grid.Row="6" Grid.Column="2" CheckedChanged="CheckedChanged" IsVisible="True"/>
            <RadioButton Content="" GroupName="chart" Value="C" Grid.Row="6" Grid.Column="3" CheckedChanged="CheckedChanged" IsVisible="True" IsChecked="False"/>
            <RadioButton Content="" GroupName="chart" Value="A" Grid.Row="7" Grid.ColumnSpan="6" x:Name="Default" CheckedChanged="CheckedChanged" IsVisible="True" />
            <Button x:Name="EvaluateSceneBtn" Text="" HeightRequest="50" Clicked="" Grid.Row="8" Grid.ColumnSpan="6"/>
            <ActivityIndicator x:Name="processing" IsRunning="False" IsVisible="False" VerticalOptions="Center" HorizontalOptions="Center" />
        </Grid>

                    
             
       
    </ScrollView>

</ContentPage>