<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Location.Photography.Premium.SunLocation"
             xmlns:system="clr-namespace:System;assembly=netstandard"

             Title="SunLocation"
>
   


    
        <VerticalStackLayout>
            <Picker x:Name="locationPicker" SelectedIndexChanged="locationPicker_SelectedIndexChanged"  ItemDisplayBinding="{Binding Title}" />
            <DatePicker x:Name="date" DateSelected="date_DateSelected"  Date="{Binding SelectedDateTime}"  />
            <TimePicker x:Name="time" TimeSelected="time_TimeSelected"  Time="{Binding SelectedDateTime}" />

            <Image x:Name="north" Source="north.png" Rotation="{Binding NorthRotationAngle}"/>
            <Label Text="{x:Static system:Environment.NewLine}"/>
            <Label Text="{x:Static system:Environment.NewLine}"/>
            <Label Text="{x:Static system:Environment.NewLine}"/>
            <Image x:Name="arrow" Source="arrowup.png" WidthRequest="150" Rotation="{Binding SunDirection}"/>
        </VerticalStackLayout>
    
</ContentPage>