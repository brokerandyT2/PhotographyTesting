<?xml version="1.0" encoding="utf-8" ?>
<local:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:Location.Core.Views"
             x:Class="Location.Core.Views.AddLocation"
             xmlns:models="clr-namespace:Locations.Core.Shared.ViewModels;assembly=Locations.Core.Shared"
             xmlns:strings="clr-namespace:Location.Core.Resources"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             x:DataType="models:LocationViewModel">

    <Grid Padding="10" Margin="5">
        <ScrollView>
            <Grid Padding="10" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Use Background property for the button instead of hardcoded color -->
                <Button x:Name="AddPhoto" 
                        Pressed="AddPhoto_Pressed"
                        ImageSource="{Binding Photo, TargetNullValue='landscape.png'}" 
                        Background="{StaticResource Gray400}" 
                        Grid.Column="0" 
                        Grid.ColumnSpan="4" 
                        WidthRequest="500" 
                        Grid.Row="0"
                        Padding="5"
                        CornerRadius="10"
                        MinimumHeightRequest="50"
                        Margin="5" />

                <Label Text="{x:Static system:Environment.NewLine}" 
                       Grid.Column="0" 
                       Grid.ColumnSpan="4" 
                       Grid.Row="1"
                       FontSize="14"
                       Margin="5"/>

                <Label Text="{x:Static strings:AppResources.Title}" 
                       FontSize="14" 
                       Grid.Row="1" 
                       Grid.ColumnSpan="4" 
                       HorizontalOptions="Start"
                       Margin="5"/>

                <Entry IsPassword="False" 
                       IsSpellCheckEnabled="True" 
                       IsTextPredictionEnabled="True" 
                       Text="{Binding Title}" 
                       Grid.Row="2" 
                       Grid.Column="0" 
                       Grid.ColumnSpan="4"
                       FontSize="14"
                       Margin="5"/>

                <Label Text="{x:Static system:Environment.NewLine}" 
                       Grid.Column="0" 
                       Grid.ColumnSpan="4" 
                       Grid.Row="3"
                       FontSize="14"
                       Margin="5"/>

                <Label Grid.Row="4" 
                       Grid.Column="0" 
                       Text="{x:Static strings:AppResources.Latitude}" 
                       FontSize="14" 
                       x:Name="Latitude" 
                       HorizontalOptions="Start"
                       Margin="5"/>

                <Label Grid.Row="4" 
                       Grid.Column="2" 
                       Text="{x:Static strings:AppResources.Longitude}" 
                       FontSize="14" 
                       x:Name="Longitude" 
                       HorizontalOptions="Start"
                       Margin="5"/>

                <Label Grid.Row="5" 
                       Grid.Column="0" 
                       Text="{Binding Lattitude}" 
                       FontSize="14" 
                       HorizontalOptions="Start"
                       Margin="5"/>

                <Label Grid.Row="5" 
                       Grid.Column="2" 
                       Text="{Binding Longitude}" 
                       FontSize="14" 
                       HorizontalOptions="Start"
                       Margin="5"/>

                <Label Text="{x:Static system:Environment.NewLine}" 
                       Grid.Column="0" 
                       Grid.ColumnSpan="4" 
                       Grid.Row="6"
                       FontSize="14"
                       Margin="5"/>

                <Label Text="{x:Static strings:AppResources.Description}" 
                       FontSize="14" 
                       Grid.Row="6" 
                       Grid.ColumnSpan="4" 
                       HorizontalOptions="Start"
                       Margin="5"/>

                <Editor Text="{Binding Description}" 
                        Grid.Row="7" 
                        Grid.Column="0" 
                        Grid.ColumnSpan="4" 
                        HeightRequest="150"
                        FontSize="14"
                        AutoSize="TextChanges"
                        VerticalTextAlignment="Start"
                        Margin="5"/>

                <!-- Use event handler for the Save button -->
                <Button x:Name="Save" 
                        Text="Save" 
                        HeightRequest="50" 
                        Grid.Column="0" 
                        Grid.Row="8" 
                        Pressed="Save_Pressed" 
                        Grid.ColumnSpan="4"
                        Padding="5"
                        CornerRadius="10"
                        MinimumHeightRequest="50"
                        FontSize="14"
                        Margin="5"/>

                <Button x:Name="CloseModal" 
                        Text="{x:Static strings:AppResources.CloseLocationDetails}" 
                        Pressed="CloseModal_Pressed" 
                        Grid.Row="9" 
                        Grid.ColumnSpan="2"
                        Padding="5"
                        CornerRadius="10"
                        MinimumHeightRequest="50"
                        FontSize="14"
                        IsVisible="False"
                        Margin="5"/>
            </Grid>
        </ScrollView>

        <!-- Busy indicator overlay -->
        <Grid IsVisible="{Binding VmIsBusy}" 
              BackgroundColor="{StaticResource TransparentOverlayBrush}"
              Padding="10"
              Margin="5">
            <VerticalStackLayout VerticalOptions="Center" 
                                 HorizontalOptions="Center"
                                 Spacing="10">
                <ActivityIndicator IsRunning="{Binding VmIsBusy}" 
                                   HeightRequest="50" 
                                   WidthRequest="50" 
                                   Color="White" />
                <Label Text="Processing, please wait..." 
                       TextColor="White" 
                       FontSize="14"
                       Margin="5"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Error message display -->
        <Grid IsVisible="{Binding VmErrorMessage, Converter={StaticResource StringToBoolConverter}}"
              BackgroundColor="{StaticResource TransparentErrorBrush}"
              VerticalOptions="End"
              Padding="10"
              Margin="5">
            <Label Text="{Binding VmErrorMessage}"
                   TextColor="{StaticResource ErrorRed}"
                   FontSize="14"
                   Margin="5"/>
        </Grid>
    </Grid>
    </local:ContentPageBase>