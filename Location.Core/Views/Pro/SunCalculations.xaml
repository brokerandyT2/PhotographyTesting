<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Location.Core.Views.Pro.SunCalculations"
             Title="SunCalculations"
             xmlns:models="clr-namespace:Location.Photography.Shared.ViewModels;assembly=Location.Photography.Shared"
             xmlns:strings="clr-namespace:Location.Core.Resources" 
             xmlns:system="clr-namespace:System;assembly=netstandard"
             x:DataType="models:SunCalculations">
   <ContentPage.BindingContext>
        <models:SunCalculations/>
    </ContentPage.BindingContext>
   <ScrollView>  
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
      <Label Text="{x:Static system:Environment.NewLine}" Grid.Row="2" Grid.ColumnSpan="4"/>
        <Label x:Name="PickerLabel" Text="{x:Static strings:AppResources.chooseyourlocation}" Padding="0,20,0,0" TextColor="#CC0000" FontSize="Medium" Grid.Row="0" Grid.ColumnSpan="4"/>
        <Picker x:Name="LocationsPicker" SelectedIndexChanged="LocationsPicker_SelectedIndexChanged"  ItemsSource="{Binding Locations}" ItemDisplayBinding="{Binding Title}" Grid.Row="1" Grid.ColumnSpan="4"/>


     <DatePicker x:Name="date" Grid.Row="4" Grid.ColumnSpan="4" DateSelected="date_DateSelected"  Format="{Binding DateFormat}"  />

        <Label Text="{x:Static system:Environment.NewLine}" Grid.Row="6" Grid.ColumnSpan="4"/>
        <Image Source="Resources/AppIcon/sunrise.png" Grid.Row="7" Grid.Column="0" />
        <Label Text="{x:Static strings:AppResources.AstronomicalDawn}" TextColor="#CC0000" FontSize="Small" HorizontalOptions="Start" Grid.Row="7" Grid.Column="1" />
        <Label Text="{Binding AstronomicalDawnFormatted}" HorizontalOptions="End" Grid.Row="7" Grid.Column="2" />
   
        <Label Text="{x:Static system:Environment.NewLine}" Grid.Row="8" Grid.ColumnSpan="4"/>
        <Image Source="Resources/AppIcon/sunrise.png" Grid.Row="9" Grid.Column="0" />
        <Label Text="{x:Static strings:AppResources.Sunrise}" TextColor="#CC0000" FontSize="Small" HorizontalOptions="Start" Grid.Row="9" Grid.Column="1" />
        <Label x:Name="sunrisedisplay" Text="{Binding SunRiseFormatted}" HorizontalOptions="End" Grid.Row="9" Grid.Column="2" />

        <Label Text="{x:Static system:Environment.NewLine}" Grid.Row="10" Grid.ColumnSpan="4"/>
        <Image Source="Resources/AppIcon/goldenhour.png" Grid.Row="11" Grid.Column="0" />
        <Label Text="{x:Static strings:AppResources.goldenhourmorning}" TextColor="#CC0000" FontSize="Small" HorizontalOptions="Start" Grid.Row="11" Grid.Column="1" />
        <Label x:Name="goldenhourmorningdisplay" Text="{Binding GoldenHourMorningFormatted}" HorizontalOptions="End" Grid.Row="11" Grid.Column="2" />
  <!-- Was here-->
        <Label Text="{x:Static system:Environment.NewLine}" Grid.Row="12" Grid.ColumnSpan="4"/>
        <Image Source="Resources/AppIcon/solarnoon.png" Grid.Row="13" Grid.Column="0" />
        <Label Text="{x:Static strings:AppResources.solarnoon}" TextColor="#CC0000" FontSize="Small" HorizontalOptions="Start" Grid.Row="13" Grid.Column="1" />
        <Label x:Name="solarnoondisplay" Text="{Binding SolarNoonFormatted}" HorizontalOptions="End" Grid.Row="13" Grid.Column="2" />

        <Label Text="{x:Static system:Environment.NewLine}" Grid.Row="14" Grid.ColumnSpan="4"/>
        <Image Source="Resources/AppIcon/goldenhour.png" Grid.Row="15" Grid.Column="0" />
        <Label Text="{x:Static strings:AppResources.goldenhourevening}" TextColor="#CC0000" FontSize="Small" HorizontalOptions="Start" Grid.Row="15" Grid.Column="1" />
        <!-- TODO: FIGURE OUT WHY THE FUCK i CAN'T BIND EVENING GOLDENHOUR, BUT EVERYTHING ELSE WORKS (CAUSES RUNTIME SHUTDOWN)     <Label x:Name="goldenhoureveningdisplay" Text="{Binding GoldenHourEveningFormatted}" HorizontalOptions="End" Grid.Row="15" Grid.Column="2" />    
        <Label Text="{Binding GoldenHourForm}" HorizontalOptions="End" Grid.Row="15" Grid.Column="2" />-->
        <Label Text="{x:Static system:Environment.NewLine}" Grid.Row="16" Grid.ColumnSpan="4"/> 
        <Image Source="Resources/AppIcon/sunset.png" Grid.Row="17" Grid.Column="0" />
        <Label Text="{x:Static strings:AppResources.Sunset}" TextColor="#CC0000" FontSize="Small" HorizontalOptions="Start" Grid.Row="17" Grid.Column="1" />
        <Label x:Name="sunsetdisplay" Text="{Binding SunSetFormatted}" HorizontalOptions="End" Grid.Row="17" Grid.Column="2" />
        <Label Text="{x:Static system:Environment.NewLine}" Grid.Row="18" Grid.ColumnSpan="4"/>
        <Image Source="Resources/AppIcon/sunrise.png" Grid.Row="19" Grid.Column="0" />
        <Label Text="{x:Static strings:AppResources.AstronomicalDusk}" TextColor="#CC0000" FontSize="Small" HorizontalOptions="Start" Grid.Row="19" Grid.Column="1" />
        <Label FormattedText="{Binding AstronomicalDuskFormatted}" HorizontalOptions="End" Grid.Row="19" Grid.Column="2" />
        </Grid>
    </ScrollView>
</ContentPage>