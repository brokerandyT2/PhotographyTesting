<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Location.Core.Views.Tips"
             xmlns:models="clr-namespace:Locations.Core.Shared.ViewModels;assembly=Locations.Core.Shared"
             xmlns:strings="clr-namespace:Location.Core.Resources"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             Title="Tips">
    <ContentPage.BindingContext>
        <models:TipDisplayViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <!-- 3 -->
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="{x:Static strings:AppResources.selectonetiptype}" FontSize="Medium" Grid.Row="0" Grid.ColumnSpan="2"/>
            <Picker ItemsSource="{Binding Displays}" ItemDisplayBinding="{Binding Name}" x:Name="pick" Grid.Row="1" Grid.ColumnSpan="2" SelectedIndexChanged="pick_SelectedIndexChanged" />
            <Label Text="{x:Static system:Environment.NewLine}" Grid.Row="1" Grid.ColumnSpan="2"/>
            <Label Text="{x:Static strings:AppResources.fStop}" FontSize="Medium"  Grid.Row="2" Grid.Column="0"/>
            <Label x:Name="fStop" Text="{Binding Fstop}" Grid.Row="3" Grid.Column="0"/>
            <Label Text="{x:Static strings:AppResources.shutterspeed}" FontSize="Medium" Grid.Row="2" Grid.Column="1"/>
            <Label x:Name="shutterSpeed" Text="{Binding Shutterspeed}" Grid.Row="3" Grid.Column="1"/>
            <Label Text="{x:Static strings:AppResources.iso}" FontSize="Medium" Grid.Row="4" Grid.Column="0"/>
            <Label x:Name="iso" Text="{Binding ISO}" Grid.Row="5" Grid.Column="0"/>
            <Label Text="{x:Static system:Environment.NewLine}" Grid.Row="6" Grid.ColumnSpan="2"/>
            <Label x:Name="tiptext" Text="{Binding Content}" Grid.Row="7" Grid.ColumnSpan="2"/>
            <Button x:Name="exposurecalc" Grid.Row="8" Grid.ColumnSpan="2" Text="{x:Static strings:AppResources.SendToExposureCalculator}" CommandParameter="{Binding ID}" Pressed="exposurecalc_Pressed"/>

        </Grid>
    </ScrollView>
</ContentPage>