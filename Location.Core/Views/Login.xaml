<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Location.Core.Views.Login"
             xmlns:models="clr-namespace:Locations.Core.Shared;assembly=Locations.Core.Shared"
             Title="Login">
    <ContentPage.BindingContext>
        <models:LoginViewModel  />
    </ContentPage.BindingContext>
    <VerticalStackLayout 
        Padding="30"
        Spacing="20"
        VerticalOptions="Center">

        <Label 
            Text="Welcome!"
            FontSize="32"
            HorizontalOptions="Center" />
        <ImageButton 
            Source="android_neutral_rd_ctn.png"
           
            Command="{Binding GoogleLoginCommands}"
            BackgroundColor="#4285F4"
            
            CornerRadius="8"
            HeightRequest="50"
            HorizontalOptions="Center" 
            WidthRequest="250" />

        <Label
            Text="{Binding StatusMessage}"
            FontSize="16"
            TextColor="Gray"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>