<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Location.Core.Views.Premium.LightMeter"
             xmlns:models="clr-namespace:Location.Photography.Shared.ViewModels;assembly=Location.Photography.Shared"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             xmlns:strings="clr-namespace:Location.Core.Resources"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Core;assembly=CommunityToolkit.Maui.Core"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             Title="LightMeter"
             x:DataType="models:LightMeter">
    <ContentPage.BindingContext>
        <models:LightMeter />
    </ContentPage.BindingContext>
    <ScrollView>
    <Grid>
       
        <!-- Camera Preview -->
            <cv:CameraView x:Name="cameraView" IsEnabled="True" IsVisible="True" WidthRequest="300" HeightRequest="300" TakeAutoSnapShot="True"/>
            <Button Pressed="Button_Pressed"/>

            <Label x:Name="ExposureReading" 
           Text="EV: --"
           BackgroundColor="Black"
           TextColor="White"
           Padding="10"
           VerticalOptions="End"
           HorizontalOptions="Center"/>
        </Grid>
    </ScrollView>
</ContentPage>