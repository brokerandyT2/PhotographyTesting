<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             xmlns:local="clr-namespace:Location.Core.Views.Premium"
             x:Class="Location.Core.Views.Premium.LightMeter"
                          xmlns:system="clr-namespace:System;assembly=netstandard"
xmlns:strings="clr-namespace:Location.Core.Resources"
             Title="LightMeter">

    <!-- Light Meter Scales -->
    <VerticalStackLayout>
        <GraphicsView x:Name="graphicsView"
                  HeightRequest="300"
                  WidthRequest="300" />
        <Picker x:Name="stepPicker"
            Title="Step Size"
            ItemsSource="{Binding StepOptions}" />
        <Label Text="{x:Static system:Environment.NewLine}"></Label>
        <Button x:Name="expButton" Text="{x:Static strings:AppResources.SendToExposureCalculator}" HeightRequest="50" Pressed="Button_Pressed"/>
    </VerticalStackLayout>
</ContentPage>
