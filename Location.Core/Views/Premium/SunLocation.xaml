<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Location.Core.Views.Premium.SunLocation"
             xmlns:models="clr-namespace:Location.Photography.Shared.ViewModels;assembly=Location.Photography.Shared"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             xmlns:local="clr-namespace:Location.Core.Converters"
             Title="SunLocation"
             x:DataType="models:SunLocation">
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.BindingContext>
        <models:SunLocation/>
    </ContentPage.BindingContext>

    <Frame BorderColor="{Binding ElevationMatched, Converter={StaticResource BoolToColorConverter}}"
           Padding="10" CornerRadius="10">
        <VerticalStackLayout>
            <Picker x:Name="locationPicker" SelectedIndexChanged="locationPicker_SelectedIndexChanged"  ItemDisplayBinding="{Binding Title}" />
            <DatePicker x:Name="date" DateSelected="date_DateSelected"  Date="{Binding SelectedDateTime}"  />
            <TimePicker x:Name="time" TimeSelected="time_TimeSelected"  Time="{Binding SelectedDateTime}" />

            <Image x:Name="north" Source="north.png" Rotation="{Binding NorthRotationAngle}"/>
            <Label Text="{x:Static system:Environment.NewLine}"/>
            <Label Text="{x:Static system:Environment.NewLine}"/>
            <Label Text="{x:Static system:Environment.NewLine}"/>
            <Image x:Name="arrow" Source="arrowup.png" WidthRequest="150" Rotation="{Binding SunDirection}"/>
        </VerticalStackLayout>
    </Frame>
</ContentPage>